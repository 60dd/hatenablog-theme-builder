{
  "name": "6qd-hatenablog-boilerplate",
  "version": "1.0.0",
  "author": "6QD",
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all scss autoprefixer",
    "scss": "node-sass scss/style.scss build/style.css --output-style compressed",
    "autoprefixer": "postcss --use autoprefixer -r build/style.css --no-map",
    "watch": "chokidar \"scss/\" -c \"npm run build\""
  },
  "devDependencies": {
    "autoprefixer": "^9.6.0",
    "chokidar-cli": "^1.2.0",
    "node-sass": "^4.5.3",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^6.1.2"
  },
  "browserslist": [
    "last 2 versions",
    "ie >= 11"
  ]
}
